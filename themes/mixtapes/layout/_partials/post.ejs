<article class="post" data-post-id="<%= post._id %>">
  <figure class="post-cover" style="background-image: url('<%- url_for(post.path) %>cover.png')"></figure>
  <header class="post-header">
    <h1 class="post-title"><%= post.title %></h1><%- partial('post-meta') %>
  </header>
  <section class="post-content">
    <%- post.content %>
  </section>
</article>
